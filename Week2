import java.util.Scanner;
class Week2{
    public static void main(String[] args){
// INTEGER TYPE DATA
      	byte b;
	short s;
	int i;
	long l;
// DECIMALS DATA
	float f;
	double d;
//CHARACTERs DATA
	char c;
	String word;
	String line;
//BOOLEAN DATA
	boolean bool;

//Taking inputs 
	Scanner scan= new Scanner(System.in);
	Scanner scan1= new Scanner(System.in);
	Scanner scan2= new Scanner(System.in);


	System.out.print("Enter value in bytes: ");
	b=scan.nextByte();
	
	System.out.print("Enter value in short: ");
	s=scan.nextShort();

	System.out.print("Enter value in int: ");
	i=scan.nextInt();

	System.out.print("Enter value in long: ");
	l=scan.nextLong();

	System.out.print("Enter value in float: ");
	f=scan.nextFloat();

	System.out.print("Enter value in double: ");
	d=scan.nextDouble();

	System.out.print("Enter character: ");
	c=scan.next().charAt(0);

	System.out.print("Enter word: ");
	word=scan.next();

	System.out.print("Enter line: ");
	line=scan2.nextLine();

	System.out.print("Enter boolean: ");
	bool=scan.nextBoolean();

//DISPLAY
	System.out.printf("Byte: %03d \n",b);
	System.out.printf("Short: %03d \n",s);
	System.out.printf("Int: %03d \n",i);
	System.out.printf("Long: %03d \n",l);


	System.out.printf("Boolean: %b \n",bool);
	System.out.printf("Float: %03.2f \n",f);
	System.out.printf("Double: %03.2f \n",d);
	
	System.out.printf("Character: %c \n",c);
	System.out.printf("Word: %s\n",word);
	System.out.printf("Line: %s\n",line);
	
   }
}
